<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorPrimary">#3F51B5</color>
    <color name="lightGray0">#f5f5f5</color>
    <color name="lightGray1">#eeeeee</color>
    <color name="lightGray2">#dddddd</color>
    <string name="minus">collapse</string>
    <string name="plus">expand</string>
    <style name="mp_main_header" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:color">#333333</item>
    </style>
    <style name="mp_main_text" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="mp_secondary_header" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:color">@color/colorPrimary</item>
    </style>
    <style name="mp_secondary_text" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:color">@color/colorPrimary</item>
        <!--<item name="android:textIsSelectable">true</item>-->
    </style>
    <style name="mp_sub_sub_item_list">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/list_sub_sub_item</item>

    </style>
    <style name="mp_tertiary_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:textIsSelectable">true</item>
    </style>
    <declare-styleable name="AppCompatImageView">
        <attr format="string" name="tint"/>
    </declare-styleable>
</resources>